<head>
  <meta charset="UTF-8">
  <title>Example - example-example8-production</title>
  

  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css"/>
  <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/css/external.css"/>
  
</head>



<body ng-app="spicyApp1" background="/background.jpg">
 <%- include navbar.ejs %>

 <div ng-controller="registerController" class="container">    
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-info" style="position: relative; top: 20px; opacity: 0.85;">
      <div class="panel-heading">
        <div class="panel-title">Sign Up</div>

      </div>     

      <div style="padding-top:30px" class="panel-body" >

        <!-- -->
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

        

        <form class="form-horizontal" action="" method="post">



          <!-- Name input-->
          <div class="form-group">
            <label class="col-md-3 control-label" for="name">Name</label>
            <div class="col-md-9">
              <input id="name" name="name" type="text" required placeholder="Your name" minlength="4" maxlength="30"  pattern="[A-Za-z\s]{4,30}" title="4 to 30 characters" class="form-control">
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label" for="login">Login</label>
            <div class="col-md-9">
              <input id="login" name="login" type="text" required placeholder="Your login" minlength="4" maxlength="20" pattern="[A-Za-z]{4,10}" title="4 to 10 characters" class="form-control">
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label" for="password">Password</label>
            <div class="col-md-9">
              <input id="password" required name="password" pattern=".{4,}" type="password" class="form-control">
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label" for="date">Birthday</label>
            <div class="col-md-9">
              <input id="date" name="date" type="text" placeholder="14/04/1992" pattern="(0[1-9]|1[0-9]|2[0-9]|3[01])/(0[1-9]|1[012])/[0-9]{4}" title="DD/MM/AAAA date format" class="form-control">
            </div>
          </div>
          <!--login, senha, nome de exibição, foto, descrição e data de nascimento.-->

          <!-- Message body -->
          <div class="form-group">
            <label class="col-md-3 control-label" for="description">Description</label>
            <div class="col-md-9">
              <textarea class="form-control" id="description" name="description" maxlength="300"  title="0 to 300 characters" placeholder="Please enter your description here..." rows="5"></textarea>
            </div>
          </div>
          <div class="form-group">

           <label class="col-md-3 control-label" for="avatar">Select Your Avatar:</label>
           <div class="col-md-6">
            <select ng-model="avatar" class="form-control" id="avatar" name="avatar">
             <option value="thrall.png">Thrall</option>
             <option value="jaina.png">Jaina Proudmoore</option>
             <option value="anduin.png">Anduin Wrynn</option>
             <option value="valeera.png">Valeera Sanguinar</option>
             <option value="uther.png">Uther Lightbringer</option>
             <option value="guldan.png">Guldan</option>
             <option value="garrosh.png">Garrosh Hellscream</option>
             <option value="malfurion.png">Malfurion Stormrage</option>
             <option value="rexxar.png">Rexxar</option>
           </select>
         </div>
         <div class="col-md-2">
           <img ng-src="/avatar/{{avatar}}" class="img-circle" height="75" width="75">
         </div>
       </div>


       <!-- Form actions -->
       <div class="form-group">
        <div class="col-md-12 text-right">
          <button id="btn-login" type="button" ng-click="createUser()" class="btn btn-success">Sign Up {{form.input.valid}}</button>
        </div>
      </div>




    </form>     



  </div>                     
</div>  
</div>

</div>


</body>

