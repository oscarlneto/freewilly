<head>
  <meta charset="UTF-8">
  <title>Example - example-example8-production</title>
  

  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css"/>
  <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/css/external.css"/>
</head>



<body ng-app="spicyApp1" background="/background.jpg">
 <%- include navbar.ejs %>

 <div class="container">   
   <div class="row"> 
    <div ng-controller="newGroupController" id="newGroupBox" style="margin-top:50px;" class="col-md-8">                    
      <div class="panel panel-info" style="position: relative; top: 20px; opacity: 0.85;">
        <div class="panel-heading clearfix">
          <div class="panel-title">New Group
          </div>


        </div>     

        <div style="padding-top:30px" class="panel-body">

          <!-- -->
          <form class="form-horizontal" action="" method="post">



            <!-- Name input-->
            <fieldset class="form-group">
              <label class="col-md-2 control-label" for="groupName">Group Name</label>
              <div class="col-md-8">
                <input type="text" class="form-control" id="groupName" required minlength="2" maxlength="20" title="2 to 20 characters" placeholder="group name">
              </div>
            </fieldset>

            <fieldset class="form-group">
              <label class="col-md-2 control-label" for="groupDescription">Description</label>
              <div class="col-md-8">
                <textarea class="form-control" id="groupDescription" maxlength="200" title="1 to 200 characters" name="groupDescription" rows="5"></textarea>
              </div>
            </fieldset>

         <button ng-click="createGroup()" type="button" class="btn btn-primary">Create</button>
       </form>     
     </div>                    
   </div>  

 </div>







</div>

</div>



</body>

